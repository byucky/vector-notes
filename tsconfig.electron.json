{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist/electron",
    "rootDir": "./",
    "declaration": false,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "electron/**/*",
    "src/utilities/db.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 